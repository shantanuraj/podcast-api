  "devDependencies": {
    "@types/ioredis": "^4.0.10",
    "@types/koa": "^2.0.48",
    "@types/koa-bodyparser": "^4.2.2",
    "@types/koa-logger": "^3.1.1",
    "@types/node": "^12.0.0",
    "@types/xml2js": "^0.4.4",
    "husky": ">=1",
    "lint-staged": ">=8",
    "prettier": "1.17.0",
